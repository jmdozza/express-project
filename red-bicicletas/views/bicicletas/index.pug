extends ../layout
block content
    table.table
        thead
            tr
                th(scope='col') #
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicacion
                th(scope='col') Eliminar
                th(scope='col') Actualizar
        tbody
            each bici in bicis 
                tr
                    td(scope='row')= bici.id
                    td=bici.color
                    td=bici.modelo
                    td=bici.ubicacion 
                    td 
                        form.inline(method='post' action='/bicicletas/'+bici.id+'/delete')
                            input(type="hidden" name='id' value=bici.id)
                            button.link(type='submit' name='submit_param' value='submit_value' class='btn')='Eliminar'
                    td
                        form.inline(method='get' action='/bicicletas/update')
                            input(type="hidden" name='id' value=bici.id)
                            button.linktwo(type='submit' name='submit_param' value='submit_value' class='btn')='Actualizar'

    a(href="/bicicletas/create") Registrar Bicicleta 
    br
   

